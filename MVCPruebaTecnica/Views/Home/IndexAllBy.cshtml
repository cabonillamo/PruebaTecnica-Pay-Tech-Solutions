@model IEnumerable<Infraestructure.Model.Trabajo>

@{
    ViewBag.Title = "Obtener Tarea";
}


<style>
    .titulo-pagina {
        text-align: center;
        font-size: 2rem;
        color: #336699;
        margin-top: 20px;
        margin-bottom: 20px;
    }
</style>

<h1 class="titulo-pagina">@ViewBag.Title</h1>

<style>
    .card {
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.1);
        margin-right: 10px;
    }

    .card-body {
        padding: 1rem;
    }

    .btn-detalle {
        margin: 1rem;
    }

    .container-tarjetas {
        margin-top: 20px;
    }
    /* Estilos para el modal */
    .custom-modal {
        max-width: 600px; /* define el ancho máximo */
    }

    .modal-backdrop {
        background-color: rgba(0, 0, 0, 0.5);
    }

    .modal-content {
        background-color: #f2f2f2;
        border-radius: 10px;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.1);
    }

    .modal-header {
        background-color: #336699;
        color: white;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .modal-title {
        font-size: 1.5rem;
    }

    .modal-body {
        padding: 1rem;
    }

    .modal-footer {
        border-bottom-left-radius: 10px;
        border-bottom-right-radius: 10px;
    }
</style>

<div class="container-tarjetas d-flex justify-content-center flex-wrap">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <p class="card-text"><i class="fas fa-home"></i> Tarea</p>
                    <h5 class="card-title">@item.ID_TAREA</h5>
                         <a href="@Url.Action("Details", "Home", new { id = item.ID_TAREA })" class="btn btn-success">
                        <i class="fas fa-info-circle"></i> Obtener Tarea
                    </a>

                </div>
            </div>
        </div>


    }
</div>
